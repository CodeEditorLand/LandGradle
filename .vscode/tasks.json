// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Gradle: Watch TypeScript",
      "type": "shell",
      "problemMatcher": "$tsc-watch",
      "command": "./gradlew",
      "windows": {
        "command": ".\\gradlew.cmd"
      },
      "args": [":extension:watchTypeScript", "-x", "test", "-x", "lint"],
      "isBackground": true,
      "presentation": {
        "reveal": "never"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
