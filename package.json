{
  "name": "vscode-gradle",
  "displayName": "Gradle Tasks",
  "description": "Run gradle tasks from within Visual Studio Code",
  "version": "0.0.0",
  "private": true,
  "publisher": "richardwillis",
  "icon": "icon.png",
  "readme": "README.md",
  "author": "Richard Willis <willis.rh@gmail.com>",
  "maintainers": [
    "Richard Willis <willis.rh@gmail.com>"
  ],
  "bugs": {
    "url": "https://github.com/badsyntax/vscode-gradle/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/badsyntax/vscode-gradle/"
  },
  "license": "SEE LICENSE IN LICENSE.md",
  "engines": {
    "vscode": "^1.39.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "java",
    "gradle",
    "compile",
    "build",
    "tasks"
  ],
  "activationEvents": [
    "onCommand:gradle:runtask",
    "onCommand:gradle:kill",
    "workspaceContains:/build.gradle"
  ],
  "main": "./out/extension",
  "contributes": {
    "views": {
      "explorer": [
        {
          "id": "gradleTasks",
          "name": "Gradle Tasks",
          "when": "extensionActivated"
        }
      ]
    },
    "commands": [
      {
        "command": "gradle:runtask",
        "title": "Gradle: Run task"
      },
      {
        "command": "gradle:refresh",
        "title": "Gradle: Refresh tasks"
      },
      {
        "command": "gradle:kill",
        "title": "Gradle: Kill all tasks"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Gradle configuration",
      "properties": {
        "gradle.useCommand": {
          "type": "string",
          "default": "gradlew",
          "description": "The path to the gradlew command"
        },
        "gradle.tasks.args": {
          "type": "string",
          "default": "--all",
          "description": "Custom gradle tasks arguments"
        },
        "gradle.enableTasksExplorer": {
          "type": "boolean",
          "default": true,
          "description": "Enable an explorer view for gradle scripts"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "test": "node ./out/test/runTest.js",
    "pretest": "npm run compile",
    "postinstall": "vscode-install",
    "lint": "prettier --check \"src/**/*.{ts,js,json}\"",
    "format": "prettier --write \"src/**/*.{ts,js,json}\""
  },
  "devDependencies": {
    "@types/glob": "^7.1.1",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.11.1",
    "glob": "^7.1.4",
    "mocha": "^6.2.2",
    "prettier": "^1.18.2",
    "typescript": "^3.6.4",
    "vscode": "^1.1.36",
    "vscode-test": "^1.2.0"
  },
  "prettier": {
    "singleQuote": true,
    "tabWidth": 2,
    "printWidth": 80
  }
}
